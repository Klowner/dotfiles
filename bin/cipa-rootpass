#!/bin/bash
DEFAULT_USERNAME=mriedesel.cipa

IP=$1
PORT=$2

if [[ -z $USERNAME ]]; then
	USERNAME=$DEFAULT_USERNAME
fi

if [[ -z $PORT ]]; then
	PORT=22
fi

if [[ -z $IP ]]; then
	echo "Retrieve root password for a desired host"
	echo "Usage: $0 ipaddr"
	echo ""
	echo "Optional USERNAME (default: $DEFAULT_USERNAME)"
	exit 0;
fi

PASS=$(ssh -oStrictHostKeyChecking=no -p$PORT $USERNAME@$IP grep ^root /usr/cipafilter/init.d/config/users | awk '{print $4}')

echo $PASS
echo -en $PASS | xclip -in

