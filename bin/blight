#!/bin/bash

case "$(hostname)" in
	"pantsfire")
		DEV="/sys/devices/pci0000:00/0000:00:03.0/0000:02:00.0/drm/card0/card0-LVDS-1/radeon_bl0/brightness"
		;;
	*)
		exit 2
esac

if [[ $DEV && $1 ]]; then
	BRIGHT=$[ $1 * 255 / 100 ]
	$(sudo bash -c "echo $BRIGHT > $DEV")
else
	echo "Unable to set backlight (include percentage?)"
	exit 1
fi

exit 0

