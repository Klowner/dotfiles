#!/bin/bash
export WINDIR=1

DMENU_FONT='glisp-7'
DMENU_HEIGHT=16

case "$HOSTNAME" in
	"finn")
		$(dmenu_path_c | dmenu)
	;;
	*)
		if [[ -e /usr/bin/yeganesh ]]; then
			$(dmenu_path_c | yeganesh -- -fn $DMENU_FONT -h $DMENU_HEIGHT -y 17)
		else
			$(dmenu_path_c | dmenu -fn $DMENU_FONT -h $DMENU_HEIGHT -y 17)
		fi
esac
