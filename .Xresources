#include "colors/current"

!Xft.hintstyle:  hintslight
!Xft.antialias:  true
!Xft.autohint:   false
!Xft.dpi:        96
!Xft.hinting:    true
!Xft.lcdfilter:  lcddefault
!Xft.rgba:       rgb

*.font:         xft:Envy Code R for Powerline:style=Regular:size=10:antialias=0
*.boldFont:     xft:Envy Code R:style=Bold:size=10

! URxvt settings
URxvt.depth:            32
URxvt.fade:             10
URxvt.background:       #000000
URxvt.internalBorder:   4
URxvt.matcher.button:   1
URxvt.perl-ext-common:  default,matcher
URxvt.pointerBlank:     true
URxvt.scrollBar:        false
URxvt.shading:          10
URxvt.termName:         xterm-256color
URxvt.transparent:      true
URxvt.underlineURLs:    true
URxvt.urlLauncher:      /usr/bin/chromium

! Font-size hotkeys
URxvt.keysym.M-C-1: command:\033]710;xft:Envy Code R for Powerline:style=Regular:size=8\007\033]711;xft:Envy Code R:style=Bold:size=8\007
URxvt.keysym.M-C-2: command:\033]710;xft:Envy Code R for Powerline:style=Regular:size=10\007\033]711;xft:Envy Code R:style=Bold:size=10\007
URxvt.keysym.M-C-3: command:\033]710;xft:Envy Code R for Powerline:style=Regular:size=14\007\033]711;xft:Envy Code R:style=Bold:size=14\007
URxvt.keysym.M-C-4: command:\033]710;xft:Envy Code R for Powerline:style=Regular:size=18\007\033]711;xft:Envy Code R:style=Bold:size=18\007


! vim:et
